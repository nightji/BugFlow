<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>
	<!-- 标题栏 -->
	<div id="nav" width="100%" height="52" backgroundColor="#474747">
		<div width="100%" height="100%" vAlign="middle" hAlign="center">
			<input type="label" value="提交问题" color="#ffffff" fontSize="25" />
		</div>
		<div width="-2" height="-2" marginTop="11" marginRight="11"
			onClick="save">
			<img src="/flow/save.png" width="30" height="30" />
		</div>
	</div>
	<!-- 标题栏End -->
	<!-- 正文 -->
	<div width="100%" height="100%" overflow="y" layout="VBox"
		backgroundColor="#eaeaea">

		<!-- 问题类型 -->
		<div id="tmp1" width="100%" height="80" layout="HBox" vAlign="middle">
			<input type="label" paddingLeft="20" value="问   题   类  型:" /> <select
				id="select" name="proType" marginLeft="50" marginRight="20"
				width="150" value="1">
				<option text="产品级" value="1" />
				<option text="项目级" value="2" />
			</select>
		</div>
		<!-- 分割线 -->
		<div width="100%" height="2" backgroundColor="#f4f4f4"></div>

		<!-- 问题需求类型 -->
		<div id="tmp2" width="100%" height="80" layout="HBox" vAlign="middle">
			<input type="label" paddingLeft="20" value="问题需求类型:" /> <select
				id="select2" name="reqType" marginLeft="50" marginRight="20"
				width="150" value="1">
				<option text=" BUG" value="1" />
				<option text=" 新需求" value="2" />
				<option text="拓展需求" value="3" />
			</select>
		</div>
		<!-- 分割线 -->
		<div width="100%" height="2" backgroundColor="#f4f4f4"></div>
		<!-- 问题主题 -->
		<div id="tmp3" width="100%" height="150" layout="VBox" vAlign="middle">
			<div width="100%" height="80" layout="HBox" vAlign="middle">
				<input type="label" paddingLeft="20" value="问   题   主  题:" /> <select
					id="select3" name="IOSOrAndroid" marginLeft="50" marginRight="20"
					width="150" value="3">
					<option text="IOS" value="1" />
					<option text="Android" value="2" />
					<option text="IOS/Android" value="3" />
				</select>
			</div>
			<div width="100%" height="100%" marginLeft="20" marginRight="32"
				borderColor="#909090" borderWidth="1">
				<textarea id="textarea" width="100%" height="100%" name="proTitle" />
			</div>
		</div>
		<!-- 问题描述 -->
		<div id="tmp4" width="100%" height="200" layout="VBox" marginTop="25">
			<div width="100%" height="40">
				<input type="label" paddingLeft="20" value="问   题   描  述:" />
			</div>
			<div width="100%" height="100%" marginLeft="20" marginRight="32"
				borderColor="#909090" borderWidth="1">
				>
				<textarea id="textarea" width="100%" height="100%"
					name="proDescript" />
			</div>
		</div>

		<!-- 客户 -->
		<div id="tmp5" width="100%" height="100" layout="VBox" marginTop="25">
			<div width="100%" height="40">
				<input type="label" paddingTop="5" paddingLeft="20"
					value="客                户 :" />

			</div>
			<div width="100%" height="100%" marginLeft="20" marginRight="32"
				borderColor="#909090" borderWidth="1">
				<textarea id="textarea" width="100%" height="100%" name="cusName" />
			</div>
		</div>

		<!-- 预计开发工作量 -->
		<div id="tmp6" width="100%" height="100" marginTop="35">
			<div width="100%" height="40">
				<div>
					<input type="label" paddingTop="5" paddingLeft="20"
						value="预计开发工作量:" />
				</div>
				<div width="100%" height="40" marginLeft="20" marginRight="32"
					borderColor="#909090" borderWidth="1" vAlign="middle"
					hAlign="center">
					<text id="text" width="100%" height="40" name="effExpected" />
				</div>
			</div>
		</div>

		<!-- 放置隐藏属性 -->
		<input type="label" id="status" value="0" display="false"
			name="status" /> <input type="label" id="person_dealnow"
			display="false" name="person_dealNow" />
	</div>
	<!-- 底层附件栏 -->
	<div layout="HBox" width="100%" borderColor="#909090" borderWidth="1"
		height="50">
		<div width="100%" vAlign="middle" hAlign="center" height="100%">
			<img src="/flow/camera.png"> </img>
		</div>
		<div width="100%" height="100%" vAlign="middle" hAlign="center">
			<img src="/flow/pic.png"> </img>
		</div>
		<div width="100%" height="100%" vAlign="middle" hAlign="center">
			<img src="/flow/hxz.png"> </img>
		</div>
	</div>
	<!-- 底层附件栏 end-->

</body>
<script>
	function save() {

		var form = new $M.Form();
		form.setAction("/executeProblem.jsp");
		form.submit(function(result) {

		}, function(errorCode, errorMsg) {
			log("ajax error", errorCode + "  " + errorMsg);
		});

	};
</script>
</html>
